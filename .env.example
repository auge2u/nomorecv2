// This file contains environment variable definitions for the Supabase client

// Supabase URL and anon key (safe to include in client-side code)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

// Supabase service role key (server-side only, never expose in client code)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

// Server configuration
PORT=3000
NODE_ENV=development
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8788

// Blockchain configuration
BLOCKCHAIN_PROVIDER=sui
BLOCKCHAIN_NETWORK=testnet
BLOCKCHAIN_RPC_URL=https://fullnode.testnet.sui.io
BLOCKCHAIN_API_KEY=your-blockchain-api-key

// Storage configuration
STORAGE_BUCKET=nomorecv-platform
STORAGE_REGION=auto

// Authentication configuration
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

// Logging configuration
LOG_LEVEL=info
LOG_DIRECTORY=logs

// Email configuration
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@nomorecv.com
EMAIL_FROM_NAME=NOMORECV Platform

// Interview system configuration
VIDEO_PROVIDER=cloudflare
VIDEO_API_KEY=your-video-api-key
RECORDING_BUCKET=interview-recordings

// Content distribution configuration
DEFAULT_CHANNELS=website
MAX_SCHEDULED_ITEMS=10
